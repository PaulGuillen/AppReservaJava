<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="devpaul.business.empresaexample">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".vista.activities.metodopago.tarjeta.ClientPaymentsInstallmentsActivity"
            android:exported="false" />
        <activity
            android:name=".vista.activities.metodopago.tarjeta.ClientPaymentFormMPVirtualActivity"
            android:exported="false" />
        <activity
            android:name=".vista.activities.metodopago.MPagoEfectivo"
            android:exported="false" />
        <activity
            android:name=".vista.activities.carrito.CarritoDetailActivity"
            android:exported="false" />
        <activity
            android:name=".vista.activities.carrito.CarritoActivity"
            android:exported="false" />
        <activity
            android:name=".vista.activities.metodopago.MPagoVirtual"
            android:exported="false"
            android:parentActivityName=".vista.Fragments.PasteleriaPackage.PasteleriaReservar" />
        <activity
            android:name=".vista.activities.RegisterActivity"
            android:configChanges="screenSize|orientation"
            android:exported="false"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".vista.Fragments.PasteleriaPackage.PasteleriaReservar"
            android:configChanges="screenSize|orientation"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".vista.Fragments.PanaderiaPackage.PanaderiaPosteriorActivity"
            android:configChanges="screenSize|orientation"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".vista.Fragments.CafeteriaPackage.CafeteriaPosteriorActivity"
            android:configChanges="screenSize|orientation"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".vista.Fragments.PasteleriaPackage.PasteleriaPosterior"
            android:configChanges="screenSize|orientation"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".vista.activities.descripcion.DescripcionActivity"
            android:configChanges="screenSize|orientation"
            android:noHistory="true"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".vista.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>