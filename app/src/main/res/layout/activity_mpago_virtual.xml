<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.activities.metodopago.MPagoVirtual">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ActionBarStyle">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingBottom="4dp"
                    android:text="MÃ©todos de Pago"
                    android:textAppearance="@style/TitulosActionBar" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageview_mercadopago"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/mercadopago"
            android:contentDescription="@string/mercadoPago" />

        <ImageView
            android:id="@+id/imageview_paypal"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/paypal"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/paypal" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>